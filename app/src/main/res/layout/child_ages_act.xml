<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".ChildAges">

    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:id="@+id/child_age_one_btn"
        android:layout_gravity="center"
        android:text="1 Year"
        android:textColor="#EEE7E7"
        android:background="@drawable/age3_btn_back"
        android:layout_width="200dp"
        android:layout_height="60dp" />
    <Button
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/child_age_one_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/child_age_two_btn"
        android:layout_marginTop="36dp"
        android:background="@drawable/age3_btn_back"
        android:text="2 Years"
        android:textColor="#EEE7E7"

        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="60dp" />
    <Button
        app:layout_constraintTop_toBottomOf="@id/child_age_two_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:id="@+id/child_age_three_btn"
        android:layout_marginTop="36dp"
        android:background="@drawable/age3_btn_back"
        android:textColor="#EEE7E7"
        android:text="3 Years"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="60dp" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/child_age_three_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:id="@+id/child_age_four_btn"
        android:layout_marginTop="36dp"
        android:text="4 Years"
        android:textColor="#EEE7E7"
        android:background="@drawable/age3_btn_back"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="60dp" />
    <Button
        app:layout_constraintTop_toBottomOf="@id/child_age_four_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:id="@+id/child_age_five_btn"
        android:layout_marginTop="36dp"
        android:background="@drawable/age3_btn_back"
        android:text="5 Years"
        android:textColor="#EEE7E7"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="60dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>