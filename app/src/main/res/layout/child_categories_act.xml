<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp"
    tools:context=".ChildCategories">
    <Button
        android:layout_gravity="center"
        android:id="@+id/songs_category"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/sign_btn_back2"
        android:text="Songs"
        android:textSize="30dp" />
    <Button
        android:layout_gravity="center"
        android:id="@+id/skills_category"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/sign_btn_back3"
        android:text="Skills"
        android:textSize="30dp" />
    <Button
        android:layout_gravity="center"
        android:id="@+id/stories_category"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/sign_btn_back4"
        android:text="Stories"
        android:textSize="30dp"
        android:layout_marginBottom="12dp"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/paint"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/sign_btn_back5"
        android:text="Paint"
        android:textSize="30dp"
        android:visibility="gone"
        android:layout_marginBottom="12dp"/>
</LinearLayout>
    </ScrollView>