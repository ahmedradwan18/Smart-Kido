<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories">
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/welcomeTxt"
        android:textSize="36dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Category"
        android:fontFamily="casual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/pregnancyBtn"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:background="@drawable/sign_btn_back2"
        android:text="Pregnancy"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeTxt"
        />
    <Button
        android:id="@+id/Parents"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_margin="24dp"
        android:layout_weight="1"
        android:background="@drawable/sign_btn_back3"
        android:text="Parents"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pregnancyBtn"/>
    <Button
        android:layout_gravity="center"

        android:id="@+id/Child"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:background="@drawable/sign_btn_back4"
        android:text="child"
        android:textSize="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Parents"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>